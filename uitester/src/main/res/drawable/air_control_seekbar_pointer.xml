<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <size
                android:width="48dp"
                android:height="48dp" />
            <stroke
                android:width="1dp"
                android:color="#9C27B0" />
        </shape>
    </item>

    <item
        android:bottom="4dp"
        android:end="4dp"
        android:start="4dp"
        android:top="4dp">
        <shape android:shape="oval">
            <solid android:color="#9c27B0" />
        </shape>
    </item>
</layer-list>