<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:divider="@drawable/div_h"
    android:orientation="vertical"
    android:showDividers="middle"
    tools:context=".activity.MainActivity">

    <fragment
        android:id="@+id/status_bar"
        android:name="com.aientec.ktv_vod.fragment.main.StatusBarFragment"
        android:layout_width="match_parent"
        android:layout_height="113px"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout="@layout/fragment_status_bar" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="811px"
        android:background="@drawable/bg_content">

        <fragment
            android:id="@+id/nav_fragment_main"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:defaultNavHost="true"
            app:navGraph="@navigation/nav_main"
            tools:layout="@layout/fragment_main_home_menu" />

        <ImageButton
            android:id="@+id/back"
            android:layout_width="48px"
            android:layout_height="48px"
            android:layout_margin="24px"
            android:adjustViewBounds="true"
            android:background="@null"
            android:src="@drawable/ic_baseline_arrow_back_ios_24"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <fragment
        android:id="@+id/control_bar"
        android:name="com.aientec.ktv_vod.fragment.main.ControlBarFragment"
        android:layout_width="match_parent"
        android:layout_height="155px"
        tools:ignore="PxUsage"
        tools:layout="@layout/fragment_control_bar" />


</LinearLayout>