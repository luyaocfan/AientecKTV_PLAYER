<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/display_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:divider="@drawable/div_v"
        android:orientation="horizontal"
        android:padding="8dp"
        android:showDividers="middle"
        android:visibility="visible">

        <TextView
            android:id="@+id/empty_play_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="無播放資訊"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/colorWhite" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/currant_display"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/currant_track_img"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_no_album_img"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/currant_track_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                app:layout_constraintBottom_toBottomOf="@id/currant_track_img"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/currant_track_img"
                app:layout_constraintTop_toTopOf="@id/currant_track_img" />

            <TextView
                android:id="@+id/currant_tack_album"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                app:layout_constraintEnd_toEndOf="@id/currant_track_name"
                app:layout_constraintStart_toStartOf="@id/currant_track_name"
                app:layout_constraintTop_toBottomOf="@id/currant_track_name" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/prepare_display"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/prepare_track_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/colorWhite"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下一首"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/prepare_track_name" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@null"
                android:src="@drawable/ic_control_replay"
                android:tag="ACTION:REPLAY" />

            <ImageButton
                android:id="@+id/pause"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/bg_play_ctrl"
                android:padding="12dp"
                android:src="@drawable/ic_control_pause"
                android:tag="ACTION:PAUSE"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/accentPurple" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@null"
                android:src="@drawable/ic_control_cut"
                android:tag="ACTION:CUT" />


        </LinearLayout>

        <CheckBox
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="4dp"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:tag="ACTION:MUSIC_VOLUME"
            android:text="@string/label_music_control"
            android:textColor="@color/color_action_radio"
            android:textSize="@dimen/control_text_size"
            app:drawableTint="@color/color_action_radio"
            app:drawableTopCompat="@drawable/ic_control_music_volume" />

        <CheckBox
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="4dp"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:tag="ACTION:MIC_VOLUME"
            android:text="@string/label_mic_control"
            android:textColor="@color/color_action_radio"
            android:textSize="@dimen/control_text_size"
            app:drawableTint="@color/color_action_radio"
            app:drawableTopCompat="@drawable/ic_control_music" />

        <CheckBox
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="4dp"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:tag="ACTION:MODE"
            android:text="@string/label_mode"
            android:textColor="@color/color_action_radio"
            android:textSize="@dimen/control_text_size"
            app:drawableTint="@color/color_action_radio"
            app:drawableTopCompat="@drawable/ic_mode_switch" />
    </LinearLayout>


</LinearLayout>