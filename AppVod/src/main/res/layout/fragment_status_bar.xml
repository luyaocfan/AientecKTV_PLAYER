<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="113px"
    android:background="#000000"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:adjustViewBounds="true"
        android:background="@null"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:scaleType="fitStart"
        android:src="@drawable/ic_logo"
        android:tintMode="src_over" />

    <TextView
        android:id="@+id/room_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bg_room_label_underline"
        android:fontFamily="@font/gotham_normal"
        android:gravity="center"
        android:text=""
        android:textColor="@color/accentPurple"
        android:textSize="30sp"
        tools:text="101" />


    <ImageButton
        android:id="@+id/search"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:background="@null"
        android:padding="24px"
        android:scaleType="fitXY"
        android:src="@drawable/ic_search"
        app:tint="@color/color_action_btn" />

    <Space
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#00000000"
            android:drawableTop="@drawable/ic_status_home"
            android:drawableTint="@color/color_action_btn"
            android:text="@string/label_home"
            android:textColor="@color/color_action_btn" />

        <Button
            android:id="@+id/food_order"
            style="@style/Theme.AientecKTV.CheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_status_foods"
            android:text="@string/label_food_order"
            android:textColor="@color/colorWhite"
            app:drawableTint="@color/colorWhite" />

        <Button
            android:id="@+id/service"
            style="@style/Theme.AientecKTV.CheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_status_service"
            android:text="@string/label_service" />

        <Button
            android:id="@+id/language"
            style="@style/Theme.AientecKTV.CheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_status_language"
            android:gravity="center"
            android:text="@string/label_language" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/user_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/user_icon"
                android:layout_width="50px"
                android:layout_height="50px"
                android:layout_margin="8dp"
                android:adjustViewBounds="true"
                android:padding="4dp"
                android:src="@drawable/ic_empty_user"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toStartOf="@id/user"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed" />

            <CheckBox
                android:id="@+id/user"
                style="@style/Theme.AientecKTV.CheckBox"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:button="@null"
                android:clickable="false"
                android:ems="6"
                android:gravity="start|center_vertical"
                android:maxEms="6"
                android:maxLines="1"
                android:text="User"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                app:layout_constraintStart_toEndOf="@id/user_icon"
                app:layout_constraintVertical_chainStyle="packed" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/buy_car"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#00000000"
            android:drawableLeft="@drawable/ic_status_shopping" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp">

            <Button
                android:id="@+id/tracks"
                style="@style/Theme.AientecKTV.CheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="#00000000"
                android:drawableTop="@drawable/ic_status_tracks"
                android:gravity="center"
                android:padding="12dp" />

            <TextView
                android:id="@+id/track_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|top"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/ic_tracks_badges"
                android:ems="1"
                android:gravity="center"
                android:lines="1"
                android:text="12"
                android:textColor="@color/colorWhite"
                android:textSize="8sp"
                android:textStyle="bold"
                android:visibility="invisible" />
        </FrameLayout>

        <Button
            android:id="@+id/menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#00000000"
            android:drawableLeft="@drawable/ic_status_menu"
            android:drawableTint="@color/colorWhite" />
    </LinearLayout>


</LinearLayout>