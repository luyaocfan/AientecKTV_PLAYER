<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBlack"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="190dp"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:scaleType="fitStart"
        android:src="@drawable/ic_logo"
        android:tintMode="src_over" />

    <TextView
        android:id="@+id/room_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:ems="3"
        android:gravity="center"
        android:text=""
        android:textColor="@color/accentPurple"
        android:textSize="30sp"
        tools:text="101" />


    <EditText
        android:id="@+id/search"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableStart="@drawable/ic_search"
        android:inputType="none" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <CheckBox
            android:id="@+id/notification"
            style="@style/Theme.AientecKTV.CheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_notification"
            android:text="@string/label_notification" />

        <CheckBox
            android:id="@+id/service"
            style="@style/Theme.AientecKTV.CheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_status_service"
            android:text="@string/label_service" />

        <CheckBox
            android:id="@+id/language"
            style="@style/Theme.AientecKTV.CheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_status_language"
            android:gravity="center"
            android:text="@string/label_language" />

        <CheckBox
            android:id="@+id/orders"
            style="@style/Theme.AientecKTV.CheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_order"
            android:text="@string/label_orders" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/user_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/user_icon"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_empty_user"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toStartOf="@id/user"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed" />

            <CheckBox
                android:id="@+id/user"
                style="@style/Theme.AientecKTV.CheckBox"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:button="@null"
                android:clickable="false"
                android:ems="6"
                android:gravity="start|center_vertical"
                android:maxEms="6"
                android:maxLines="1"
                android:text="User"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                app:layout_constraintStart_toEndOf="@id/user_icon"
                app:layout_constraintVertical_chainStyle="packed" />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <FrameLayout
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingTop="10dp">

            <CheckBox
                android:id="@+id/tracks"
                style="@style/Theme.AientecKTV.CheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@null"
                android:drawableTop="@drawable/ic_status_tracks"
                android:gravity="center"
                android:padding="12dp" />

            <TextView
                android:id="@+id/track_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|top"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/ic_tracks_badges"
                android:ems="1"
                android:gravity="center"
                android:lines="1"
                android:text="12"
                android:textColor="@color/colorWhite"
                android:textSize="8sp"
                android:textStyle="bold"
                android:visibility="invisible" />
        </FrameLayout>

        <CheckBox
            android:id="@+id/menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="24dp"
            android:background="@drawable/ic_status_menu"
            android:backgroundTint="@color/color_action_radio"
            android:button="@null" />
    </LinearLayout>


</LinearLayout>